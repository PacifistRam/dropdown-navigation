---
// image import

import {Image} from 'astro:assets';
import {Icon} from 'astro-icon/components';

import logoImage from '../images/logo.svg'

---


<header class="wrapper header">
    <div class="logo">
        <Image src={logoImage} alt="logo" />
    </div>
    <nav id="navBar" class="navbar">
        <button id="close-menu" class="menu-close"><Icon name="icon-close-menu" size={30} /></button>
        <div class="nav-links">
            <div class="dropdown-link"><p><span>Features</span> <Icon id='icon-open' class='nav-icon' name ="icon-arrow-down" /></p></div>
            <ul class="dropdown-link-ul hidden">
                <li>Todo List</li>
                <li>Todo List</li>
                <li>Todo List</li>
            </ul>
            <div class="dropdown-link"><p><span>Company</span> <Icon class="nav-icon" name ="icon-arrow-down" /></p> </div>
            <div> <p>Careers</p></div>
            <div>  <p>About</p></div>
        </div>
        <ul class="nav-cta btn">
            <li>login</li>
            <li>Register</li>
        </ul>
    </nav>
    <button id="open-menu" class="menu-open">
        <Icon name= "icon-menu"
            size={40}
        />
    </button>
</header>


<style>
    .header{
        display:flex;
        align-items: center;
        justify-content: space-between;
        padding-block: 1.2rem;
        min-height: 50px;
    }

    .navbar{
        background-color: var(--clr-almost-white);
        color: var(--clr-almost-black);
        position: fixed;
        width: 34vh;
        height: 100dvh;
        top: 1.5rem;
        right:-34vh;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        box-shadow: 2px 0 0 var(--clr-almost-white);
        overflow-x: hidden;
        transition: right 0.2s ease-in;
        
    }

    .navbar.open{
        right: 0;
    }

    .nav-links{
        padding-left: 1.2rem;
        padding-top: 1.2rem;
        display: flex;
        flex-direction: column;
        gap:1.8rem;
        cursor: pointer;
    }

    .dropdown-link p{
        display: flex;
        gap: 0.4rem;
        align-items: center;
    }
    .nav-icon{
        width: 15px;
    }
    .menu-close{
        align-self: flex-end;
        padding-top: 1.2rem ;
        padding-right: 1.1rem;
    }
    .nav-cta{
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-self: center;
        text-transform: capitalize;
        cursor: pointer;
    }
    .dropdown-link{
        position: relative;
        transition: display 0.3s ease;
    }
    .dropdown-link-ul{
        /* position: absolute; */
        top: 8rem;
        padding: 1rem 1.2rem;
        
       
    }
    .hidden{
        display: none;
    }

    @media screen and (min-width: 769px) {
        .menu-close,.menu-open{
           display: none;
        }
        .header{
            justify-content: flex-start;
            gap: 4rem;
        }
        
        .navbar{
            position: static;
            flex-direction: row;
            background:none;
            width: 100%;
            height: inherit;
            /* gap: 6rem; */
            gap: 0;
        
           
        }
        .nav-links{
            flex-direction: row;
            align-items: center;
            height: 100%;
            align-items: center;
            padding: 0;
        }
        .nav-cta{
            flex-direction: row;
            align-items: center;
            align-self: normal;
            justify-content: center;
            margin-left: auto;
        }
    }
</style>


<script>
    const navbar = document.querySelector('#navBar')
    const menuOpen = document.querySelector('#open-menu')
    menuOpen.addEventListener('click',(e)=>{
       navbar.classList.add('open')
    })
    const menuClose = document.querySelector('#close-menu')
    menuClose.addEventListener('click',(e)=>{
       navbar.classList.remove('open')
    })
    

    const dropdownheader = document.querySelector('.dropdown-link') 
    const dropdownUl = document.querySelector(".dropdown-link-ul")
    dropdownheader.addEventListener('touchstart',() => {
        dropdownUl.classList.toggle('hidden')
        console.log('hello')
    })

    
   
</script>